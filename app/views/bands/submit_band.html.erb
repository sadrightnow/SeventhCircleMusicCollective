<h1>Submit Your Band</h1>

<%= form_with model: @band, url: bands_path, local: true do |form| %>
  <% if @band.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@band.errors.count, "error") %> prohibited this band from being saved:</h2>

      <ul>
        <% @band.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :band_name %>
    <%= form.text_field :band_name %>
  </div>

  <div>
    <%= form.label :genre %>
    <%= form.text_field :genre %>
  </div>

  <div>
    <%= form.label :band_description %>
    <%= form.text_area :band_description %>
  </div>

  <div>
    <%= form.label :band_location %>
    <%= form.text_field :band_location %>
  </div>

  <div>
    <%= form.label :band_email %>
    <%= form.email_field :band_email %>
  </div>

  <div>
    <%= form.label :band_bandcamp_link %>
    <%= form.text_field :band_bandcamp_link %>
  </div>

  <div>
    <%= form.label :band_instagram_link %>
    <%= form.text_field :band_instagram_link %>
  </div>

  <div>
    <%= form.label :profile_picture %>
    <%= form.file_field :profile_picture %>
  </div>

  <div>
    <%= form.submit "Submit Band" %>
  </div>
<% end %>

<%= link_to "Back to Bands", bands_path %>
